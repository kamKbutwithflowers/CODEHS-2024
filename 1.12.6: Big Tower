/* This program draws a big tower from Karel's starting spot */
function start(){
    while (facingSouth()) {
           turnAround();
    }
    while (facingWest()) {
           turnRight();
    }
    while (facingEast()) {
          turnLeft();
    }
     while (frontIsClear()) {
        putBall();
        move();
    }
    if (noBallsPresent()) {
         putBall();
    }
}
function a(){
      main();
}
function b(){
     main();
}
function c(){
    main();
}
function main(){
    move();
}
